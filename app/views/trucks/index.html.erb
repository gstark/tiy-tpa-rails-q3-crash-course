<p id="notice"><%= notice %></p>

<h1>Listing Trucks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Number of menu options</th>
      <th>Menu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td><%= truck.name %></td>
        <td><%= truck.location %></td>
        <td><%= truck.latitude %></td>
        <td><%= truck.longitude %></td>
        <td><%= truck.number_of_menu_options %></td>
        <td><%= truck.menu %></td>
        <td><%= link_to 'Show', truck %></td>
        <td><%= link_to 'Edit', edit_truck_path(truck) %></td>
        <td><%= link_to 'Destroy', truck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

